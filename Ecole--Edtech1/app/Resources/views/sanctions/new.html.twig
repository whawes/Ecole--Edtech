{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
{% block fixednavbar %}
        <!-- Fixed navbar -->
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <!-- Button for smallest screens -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                    <a class="navbar-brand" href="index.html">
                        <img src="{{ asset('assets/images/logo.png')}}" alt="Techro HTML5 template"></a>
                </div>
                <p class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right mainNav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY')==false %}
                        <li class="c3"><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        <li class="c4"><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                    {% else %}
                        <li class="c4"><a href="{{ path('user_profile') }}">{{ app.user.username }}</a></li>
                        <li class="c3"><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% endif %}

                </ul>
            </div>
        </div>
</div>
{% endblock fixednavbar%}

    {% block container %}
<div class="container">
    <h1>Sanction creation</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form) }}
        <div class="form-group" style="margin-top: 10px">
            <div class="form-actions">
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Create" />
            </div>
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('sanctions_index') }}">Back to the list</a>
        </li>
    </ul>
</div>
    {% endblock container %}

    {% block footer %}
        {{ parent() }}
    {% endblock footer %}

{% endblock body %}
