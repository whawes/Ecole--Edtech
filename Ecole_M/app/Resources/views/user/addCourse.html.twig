{% extends 'back/back.base.html.twig' %}

{% block body %}



{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}


    {% block header %}
        {{ parent() }}
    {% endblock header  %}

    {% block sideBar %}
        {{ parent() }}
    {% endblock  sideBar %}

    {% block container %}
        {{ parent() }}
    {% endblock container %}

    {{ form_start(edit_form) }}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Ajouter Cours</strong> Form
                        </div>
                        <div class="card-body card-block">
                            <div action="" method="post" enctype="multipart/form-data" class="form-horizontal">

                            </div>
                            <div class="row form-group">
                                {{ form_label(edit_form.nom) }}
                                <div class="col-12 col-md-9">

                                    {{ form_widget(edit_form.nom,{ 'attr': {'class': 'form-control'}} )}}

                                </div>
                            </div>

                            <div class="row form-group">
                                {{ form_label(edit_form.typeIntelligence) }}
                                <div class="col-12 col-md-9">

                                    {{ form_widget(edit_form.typeIntelligence,{ 'attr': {'class': 'form-control'}} )}}

                                </div>
                            </div>
                            <div class="row form-group">
                                {{ form_label(edit_form.prenom) }}
                                <div class="col-12 col-md-9">

                                    {{ form_widget(edit_form.prenom,{ 'attr': {'class': 'form-control'}} )}}

                                </div>

                            </div>
                            <div class="row form-group">
                                {{ form_label(edit_form.courses) }}
                                <div class="col-12 col-md-9">
                                {% for course in courses %}

                                    <input type="checkbox" name="mesIds[]" value="{{course.id}}" /> {{course.nom}}

                                {% endfor %}
                                </div>
                            </div>



                            </div>
                        </div>
                    </div>

                </div>
            </div>


            <input  class="au-btn au-btn-icon au-btn--green au-btn--small" type="submit" value="Edit" />
            {{ form_end(edit_form) }}

            <ul>
                <li>
                    <a href="{{ path('user_index') }}">Back to the list</a>
                </li>

            </ul>
            {% endblock %}
