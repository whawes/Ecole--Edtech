{% extends 'base.html.twig' %}
{% block body %}
    <header id="head" class="secondary">
        <div class="container">
            <h1>SUJET</h1>
        </div>
    </header>

    <table>
        <tbody>
        <ul>
            <li>
                <a style="float: right; margin-right: 200px" href="{{ path('sujet_index') }}">Back to the list</a>
            </li>
        </ul>
        <div class="container">
            <div class="row">
                <!-- Article content -->
                <section class="col-sm-12 maincontent" style="border-style: groove;margin-top: 40px">
                    <h1>{{ sujet.titre }}</h1>
                    <h3 style="color: #00aced">{{ sujet.date|date('Y-m-d H:i:s') }} by {{ sujet.id }}</h3>
                    <p style="font-size: 32px">
                        {{ sujet.description }}
                    </p>
                    <div style="margin-bottom: 50px">
                        {% set break = false %}
                        {% for a in aa if not break%}
                            {% if sujet.id==a.sujet.id %}
                                <a href="{{ path('dislikeshow', { 'id': sujet.id }) }}"><button style="background-color: white"><i class="fa fa-thumbs-up"></i></button></a> {{ sujet.score }}
                                {% set break = true %}
                            {% endif %}
                            {% if sujet.id!=a.sujet.id  %}
                                <a href="{{ path('likeshow', { 'id': sujet.id }) }}"><button style="background-color: white"><i class="fa fa-thumbs-o-up"></i></button></a> {{ sujet.score }}
                                {% set break = true %}
                            {% endif %}
                        {% endfor %}
                        {% if aa is empty %}
                            <a href="{{ path('likeshow', { 'id': sujet.id }) }}"><button style="background-color: white"><i class="fa fa-thumbs-o-up"></i></button></a> {{ sujet.score }}
                        {% endif %}

                        {% if app.user.id==sujet.createur  %}
                            <a href="{{ path('sujet_edit', { 'id': sujet.id }) }}"><button>edit</button></a>
                            <a href="{{ path('supprimer', { 'id': sujet.id }) }}"><button>supprimer</button></a>
                        {% endif %}
                    </div>
                    {% for commentaire in commentaires %}
                        <div style="border-style: groove;margin-bottom: 10px">
                            <div style="margin-left: 10px;margin-bottom: 5px">
                                <h5>{{ commentaire.createur }} <span style="float: right">{{ commentaire.date|date('Y-m-d H:i:s') }}</span></h5>
                                <p style="font-size: 22px">
                                    {{ commentaire.texte }}
                                </p>
                               {% if app.user.id==commentaire.createur  %}
                                    <button><a href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}">edit</a></button>
                                    <button><a href="{{ path('supprimer_commentaire', { 'id': commentaire.id }) }}">supprimer</a></button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}

                    <div class="form-light mt-20">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label>{{ form_label(form.texte) }}</label>
                            {{ form_widget(form.texte, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <input type="submit" class="btn btn-two" value="Create" style="margin-bottom: 5px"/>
                        {{ form_end(form) }}
                    </div>

                </section>
            </div>
        </div>
        </tbody>
    </table>


{% endblock %}
